{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "types": [],
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es5",
    "allowJs":true,
    "typeRoots": [
      "../node_modules/@types"
    ], 
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    }
  }, 
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "types": ["node"],
  }
}
